<h1>Créer un nouveau véhicule</h1>

<%= form_for(:cars) do |f| %>

    <%= f.label :model %>
    <br>
    <%= f.text_field :model, class: "form-control" %>
    <br>
    <%= f.label "Modele Fiscal" %>
    <%= f.collection_select :scale_id, Scale.activated, :id, :model_with_fiscal %>
    <br>
    <%= f.submit %>
<% end %>